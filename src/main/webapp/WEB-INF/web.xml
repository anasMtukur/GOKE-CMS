<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
		<servlet-name>UserController</servlet-name>
		<servlet-class>com.gokecms.controller.SystemUserController</servlet-class>
	</servlet>
	<servlet-mapping>
	   <servlet-name>UserController</servlet-name>
	   <url-pattern>/user</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>UserController</servlet-name>
	   <url-pattern>/user/new</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>UserController</servlet-name>
	   <url-pattern>/user/add</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>UserController</servlet-name>
	   <url-pattern>/user/edit</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>UserController</servlet-name>
	   <url-pattern>/user/update</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>UserController</servlet-name>
	   <url-pattern>/user/delete</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AuthController</servlet-name>
		<servlet-class>com.gokecms.controller.AuthController</servlet-class>
	</servlet>
	<servlet-mapping>
	   <servlet-name>AuthController</servlet-name>
	   <url-pattern>/auth</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>AuthController</servlet-name>
	   <url-pattern>/signout</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>HomeController</servlet-name>
		<servlet-class>com.gokecms.controller.HomeController</servlet-class>
	</servlet>
	<servlet-mapping>
	   <servlet-name>HomeController</servlet-name>
	   <url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>HomeController</servlet-name>
	   <url-pattern>/client</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>HomeController</servlet-name>
	   <url-pattern>/client/add</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>HomeController</servlet-name>
	   <url-pattern>/client/update</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>HomeController</servlet-name>
	   <url-pattern>/client/delete</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ClientFileController</servlet-name>
		<servlet-class>com.gokecms.controller.ClientFileController</servlet-class>
	</servlet>
	<servlet-mapping>
	   <servlet-name>ClientFileController</servlet-name>
	   <url-pattern>/client-file/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ApiSetupController</servlet-name>
		<servlet-class>com.gokecms.controller.ApiSetupController</servlet-class>
	</servlet>
	<servlet-mapping>
	   <servlet-name>ApiSetupController</servlet-name>
	   <url-pattern>/api-setup-doc</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>ApiSetupController</servlet-name>
	   <url-pattern>/api-setup-doc/add</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>ApiSetupController</servlet-name>
	   <url-pattern>/api-setup-doc/update</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>ApiSetupController</servlet-name>
	   <url-pattern>/api-setup-doc/delete</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ApiController</servlet-name>
		<servlet-class>com.gokecms.controller.ApiController</servlet-class>
	</servlet>
	<servlet-mapping>
	   <servlet-name>ApiController</servlet-name>
	   <url-pattern>/api/v1</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>ApiController</servlet-name>
	   <url-pattern>/api/v1/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>ApiController</servlet-name>
	   <url-pattern>/api/v1/clients</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>ApiController</servlet-name>
	   <url-pattern>/api/v1/clients/*</url-pattern>
	</servlet-mapping>
	
	<filter>
	    <filter-name>ApiAuthenticationFilter</filter-name>
	    <filter-class>com.gokecms.filters.ApiAuthenticationFilter</filter-class>
	</filter>
 
	<filter-mapping>
	  <filter-name>ApiAuthenticationFilter</filter-name>
	  <url-pattern>/api/v1/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>UserAccountController</servlet-name>
		<servlet-class>com.gokecms.controller.UserAccountController</servlet-class>
	</servlet>
	<servlet-mapping>
	   <servlet-name>UserAccountController</servlet-name>
	   <url-pattern>/account</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	   <servlet-name>UserAccountController</servlet-name>
	   <url-pattern>/account/update</url-pattern>
	</servlet-mapping>
	
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
            <scripting-invalid>true</scripting-invalid>
            <default-content-type>text/html;charset=UTF-8</default-content-type>
            <error-on-undeclared-namespace>true</error-on-undeclared-namespace>
        </jsp-property-group>
    </jsp-config>
    
    <listener>
		<listener-class>com.gokecms.listeners.ListenersRunner</listener-class>
	</listener>
</web-app>
